    <script>
        let selectedHistory = []; // è¨˜éŒ„é¸æ“‡æ­·å²ï¼Œç”¨æ–¼æ’¤éŠ·
        let correctAnswers = {
            1: "B", 2: "A", 3: "A", 4: "C", 5: "C",
            6: "A", 7: "B", 8: "A", 9: "B", 10: "C",
            11: "B", 12: "A", 13: "B", 14: "C", 15: "A"
        };

        // é¸æ“‡é¸é …ï¼ˆå–®é¸+è¨˜éŒ„æ­·å²ï¼‰
        document.querySelectorAll('.option').forEach(option => {
            option.addEventListener('click', function() {
                const questionNum = this.getAttribute('data-question');
                const selectedOption = this.textContent.charAt(0);
                
                // å–æ¶ˆåŒé¡Œç›®å…¶ä»–é¸é …
                const sameQuestionOptions = document.querySelectorAll(`.option[data-question="${questionNum}"]`);
                sameQuestionOptions.forEach(opt => opt.classList.remove('selected'));
                
                // æ¨™è¨˜ç•¶å‰é¸æ“‡
                this.classList.add('selected');
                
                // è¨˜éŒ„é¸æ“‡æ­·å²ï¼ˆé¡Œè™Ÿ+é¸é …ï¼‰
                selectedHistory.push({
                    question: questionNum,
                    option: this,
                    prevSelected: Array.from(sameQuestionOptions).find(opt => opt.classList.contains('selected'))
                });
            });
        });

        // æ’¤éŠ·ä¸Šä¸€æ­¥é¸æ“‡
        function undoSelection() {
            if (selectedHistory.length === 0) {
                alert('æ²’æœ‰å¯æ’¤éŠ·çš„é¸æ“‡å“¦ï½');
                return;
            }
            
            const lastSelect = selectedHistory.pop();
            const questionNum = lastSelect.question;
            const lastOption = lastSelect.option;
            
            // å–æ¶ˆç•¶å‰é¸æ“‡
            lastOption.classList.remove('selected');
            
            // æ¢å¾©ä¹‹å‰çš„é¸æ“‡ï¼ˆå¦‚æœæœ‰ï¼‰
            if (lastSelect.prevSelected) {
                lastSelect.prevSelected.classList.add('selected');
            }
        }

        // æª¢æŸ¥ç­”æ¡ˆ
        function checkAnswers() {
            let correctCount = 0;
            let wrongList = [];
            const allOptions = document.querySelectorAll('.option');
            
            // é©—è­‰æ¯é¡Œç­”æ¡ˆ
            for (let i = 1; i <= 15; i++) {
                const selectedOption = document.querySelector(`.option[data-question="${i}"].selected`);
                if (!selectedOption) {
                    alert(`ç¬¬${i}é¡Œé‚„æ²’é¸æ“‡å“¦ï¼è«‹å®Œæˆæ‰€æœ‰é¡Œç›®å†æäº¤ï½`);
                    return;
                }
                
                const userAnswer = selectedOption.textContent.charAt(0);
                const isCorrect = userAnswer === correctAnswers[i];
                
                // æ¨™è¨˜æ­£éŒ¯
                if (isCorrect) {
                    selectedOption.classList.add('correct');
                    correctCount++;
                } else {
                    selectedOption.classList.add('wrong');
                    wrongList.push({
                        question: i,
                        userAnswer: userAnswer,
                        correctAnswer: correctAnswers[i]
                    });
                }
            }

            // é¡¯ç¤ºçµæœ
            const result = document.getElementById('result');
            const scoreTitle = document.getElementById('scoreTitle');
            const scoreDesc = document.getElementById('scoreDesc');
            const wrongListEl = document.getElementById('wrongList');
            const answerListEl = document.getElementById('answerList');
            
            result.style.display = 'block';
            
            // åˆ†æ•¸æ¨™é¡Œ
            if (correctCount >= 12) {
                scoreTitle.textContent = `ğŸ‰ æ­å–œï¼ä½ ç²å¾— ${correctCount}/15 åˆ†ï¼Œæ˜¯é’å±±ç—…å‹ç¾¤çœŸå¥½å‹ï¼`;
                scoreTitle.style.color = '#28a745';
                scoreDesc.textContent = 'ç¾¤è£¡çš„æ­¡æ¨‚ç¬é–“ä½ éƒ½éŠ˜è¨˜åœ¨å¿ƒï¼Œå‹èª¼å°èˆ¹ç©©å¦‚æ³°å±±ï½';
            } else if (correctCount >= 8) {
                scoreTitle.textContent = `ğŸ‘ ä¸éŒ¯å“¦ï¼ä½ ç²å¾— ${correctCount}/15 åˆ†ï¼Œæ˜¯åˆæ ¼å¥½å‹ï¼`;
                scoreTitle.style.color = '#ffc107';
                scoreDesc.textContent = 'å†å¤šåƒèˆ‡ç¾¤èŠäº’å‹•ï¼Œå°±èƒ½æˆç‚ºç„¡è©±ä¸è«‡çš„è¶…ç´šå¥½å‹å•¦ï½';
            } else {
                scoreTitle.textContent = `ğŸ’ª åŠ æ²¹ï¼ä½ ç²å¾— ${correctCount}/15 åˆ†ï¼Œç¹¼çºŒåŠªåŠ›ï¼`;
                scoreTitle.style.color = '#dc3545';
                scoreDesc.textContent = 'å¤šå’Œç¾¤å‹ç˜‹ç‹‚äº’å‹•ï¼Œä¸‹æ¬¡ä¸€å®šèƒ½åˆ·æ–°åˆ†æ•¸ï¼';
            }

            // å±•ç¤ºéŒ¯é¡Œ
            if (wrongList.length === 0) {
                document.getElementById('wrongQuestions').innerHTML = '<h4>éŒ¯é¡Œæ•´ç†ï¼š</h4><p>å…¨å°ï¼å¤ªå²å®³å•¦ï½</p>';
            } else {
                let wrongHtml = '';
                wrongList.forEach(item => {
                    wrongHtml += `<p>ç¬¬${item.question}é¡Œï¼šä½ çš„ç­”æ¡ˆ ${item.userAnswer} â†’ æ­£ç¢ºç­”æ¡ˆ ${item.correctAnswer}</p>`;
                });
                wrongListEl.innerHTML = wrongHtml;
            }

            // å±•ç¤ºå®Œæ•´ç­”æ¡ˆ
            let answerHtml = '';
            for (let i = 1; i <= 15; i++) {
                answerHtml += `<p>ç¬¬${i}é¡Œï¼š${correctAnswers[i]}</p>`;
            }
            answerListEl.innerHTML = answerHtml;
        }

        // é‡ç½®é¡Œç›®
        function resetQuiz() {
            document.querySelectorAll('.option').forEach(option => {
                option.classList.remove('selected', 'correct', 'wrong');
            });
            document.getElementById('result').style.display = 'none';
            selectedHistory = [];
        }

        // è¤‡è£½åˆ†äº«éˆæ¥
        function copyLink() {
            const currentUrl = window.location.href;
            navigator.clipboard.writeText(currentUrl).then(() => {
                alert('éˆæ¥è¤‡è£½æˆåŠŸï¼è¶•ç·Šåˆ†äº«çµ¦ç¾¤å‹ä¸€èµ·æŒ‘æˆ°ï½');
            }).catch(err => {
                alert('è¤‡è£½å¤±æ•—ï¼Œè«‹æ‰‹å‹•è¤‡è£½ç€è¦½å™¨åœ°å€æ¬„çš„ç¶²å€ï½');
            });
        }
    </script>
